package fatec.string;

import java.util.Scanner;
public class ContaEspacos {
	public static void main(String[]args) {
		
	Scanner entrada = new Scanner(System.in);	
		
	int cont = 0;
	
	String frase[];
	
	
	frase = new String[1];
	
	

	for(int i = 0; i < frase.length; i++) {
		System.out.print("Digite uma frase: ");
		
		frase[i] = entrada.nextLine();
		
		
			
			for(int e = 0; e < i; e++ ) {
				if(frase[i].contains(" ")){
					cont++;
			}
			
		}
		
	}
	
	System.out.println("A frase colocada possui " + cont + " espaços");
	
	
	entrada.close();
		
	}
}
